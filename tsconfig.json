{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "DOM"
    ],
    "strict": true,
    "paths": {
      "chibivue": [
        "./packages"
      ]
    },
    "moduleResolution": "Bundler",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "packages/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}